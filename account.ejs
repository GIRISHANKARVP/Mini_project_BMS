<html>
<head>
 <meta name="viewport" content="width=device-width,initial-scale=1">
 <link href="css/bootstrap.min.css" rel="stylesheet">
 <script src="js/bootstrap.bundle.min.js"></script>
</head>
<body style="background-color:rgb(195, 247, 195)">
  <nav class="navbar navbar-expand-sm bg-warning navbar-dark">
    <div class="container-fluid">
     <ul class="navbar-nav">
      <li class="nav-item">
       <a class="nav-link " href="/branch" style="color:rgb(0, 13, 255)">Branch</a>
      </li>
      <li class="nav-item">
       <a class="nav-link active" href="/account" style="color:red;background-color: rgb(195, 247, 195);">Account</a>
      </li>
      <li class="nav-item">
       <a class="nav-link" href="/customer" style="color:rgb(8, 1, 20)">Customer</a>
      </li>
     </ul>
    </div>
    </nav>
    <div class="container">
      <form action="/bank" method="post">
          <h2 style="text-align: center;color:rgb(52, 204, 41);">Enter Account Details</h2>
         <table class="table ">
             
         
             <tr>
                 <td ><b> Account number</b> <br></td>
                 <td> <input class="form-control" type="text" name="an" id="an" > </td>
                 
             </tr>
             <tr>
              <td ><b>Branch Id</b> <br></td>
              <td> <input class="form-control" type="text" name="bi" id="bi" > </td>
              
          </tr>
             <tr>
                 <td ><b> Balance</b> <br></td>
                 <td> <input class="form-control" type="text" name="bal" id="bal"></td>
             </tr>
            <BR><BR>
             <button  class="btn btn-secondary " type="submit">INSERT</button>
             <button formaction="/viewaccount" formmethod="get" class="btn btn-success" style="margin-left:10px" >VIEW ACCOUNT</button>
             <button formaction="/deleteaccount" formmethod="post" class="btn btn-danger" style="margin-left:10px" >DELETE ACCOUNT</button>
            </table>
            
    </form>
    </div>
